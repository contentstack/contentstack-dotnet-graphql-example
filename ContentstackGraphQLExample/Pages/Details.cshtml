@page
@model DetailsModel
@{
}

    <div class="products">
        <div class="container">
            <div class="single-page">
                <div class="single-page-row" id="detail-21">
                    <div class="col-md-6 single-top-left vcenter">
                        <div class="thumb-image detail_images flexslider">
                            <ul class="slides">
                                <li data-thumb="@Model.Product.product.featured_imageConnection.edges[0].node.url">
                                    <img class="slides-image" src="@Model.Product.product.featured_imageConnection.edges[0].node.url" />
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-6 single-top-right vcenter">
                        <h3 class="item_name">@Model.Product.product.title</h3>
                        <p>@Model.Product.product.description</p>
                        <div class="actual-price">﹩@Model.Product.product.price</div>

                    </div>
                </div>
            </div>
        </div>
    </div>